{% block title %}Home{% endblock %}

{% block body %}

    <section class="about">
        <div class="header-about">
            <h5 class="home_g">BONJOUR, JE SUIS DÉVELOPPEUR WEB.</h5>
            <h1 class="home_name">G W E N D A L <span>&nbsp;</span> N O G U E S</h1>
            <a href="{{ path('cv_download', {'filename': 'cv.pdf' }) }}" class="cv-container">
                <span>Télécharger mon CV</span
                ><div class="dash"></div>
